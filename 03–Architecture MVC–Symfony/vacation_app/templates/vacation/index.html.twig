{% extends 'base.html.twig' %}

{% block body %}
	<h1>My Vacations</h1>

	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Type</th>
				<th>Status</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for vacation in vacations %}
				<tr>
					<td>{{ vacation.id }}</td>
					<td>{{ vacation.startDate|date('Y-m-d H:i') }}</td>
					<td>{{ vacation.endDate|date('Y-m-d H:i') }}</td>
					<td>{{ vacation.type }}</td>
					<td>{{ vacation.status }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('vacation_new') }}">Request a new vacation</a>
{% endblock %}

